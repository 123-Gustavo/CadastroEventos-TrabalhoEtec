<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CadastroEventos_TrabalhoEtec.Resources.Views.CadastrarEvento"
             Title="CadastrarEvento"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    <VerticalStackLayout>
        <Label 
            Text="Cadastro de Eventos"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            TextColor="{StaticResource Primary}"
            FontSize="50"/>

        <Frame Margin="10">
            <VerticalStackLayout Padding="20" Spacing="15">
                <Entry 
                    Placeholder="Nome do Evento"
                    BackgroundColor="{StaticResource White}"
                    x:Name="txt_nomeevento"
                    TextColor="{StaticResource Gray500}"
                    />


                <Frame Margin="10" Padding="10">
                    <VerticalStackLayout>
                        <Label Text="Periodo da Estadia" TextColor="{StaticResource Primary}" FontSize="20"/>

                        <HorizontalStackLayout>

                            <Label Text="Check-In: " VerticalOptions="Center" HorizontalOptions="Center"/>
                            <DatePicker x:Name="dtpck_datainicio"
                                        Format="dd/MM/yyyy"
                                        VerticalOptions="Center" HorizontalOptions="Center"
                                        DateSelected="dtpck_datainicio_DateSelected"
                                        />

                        </HorizontalStackLayout>
                        <HorizontalStackLayout>

                            <Label Text="Check-Out: " VerticalOptions="Center" HorizontalOptions="Center"/>
                            <DatePicker x:Name="dtpck_datafim"
                                        Format="dd/MM/yyyy"
                                        VerticalOptions="Center" HorizontalOptions="Center"
                                        DateSelected="dtpck_datafim_DateSelected"
                                        />

                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <Entry 
                    Placeholder="Local do Evento"
                    BackgroundColor="{StaticResource White}"
                    x:Name="txt_localevento"
                    TextColor="{StaticResource Gray500}"
                    />

                <Entry 
                    Placeholder="Número de Participantes"
                    BackgroundColor="{StaticResource White}"
                    x:Name="txt_numeroparticipantes"
                    TextColor="{StaticResource Gray500}"
                    />

                <Entry 
                    Placeholder="Preço do Ingresso"
                    BackgroundColor="{StaticResource White}"
                    x:Name="txt_valoringresso"
                    TextColor="{StaticResource Gray500}"/>

                <Button 
                    Text="Cadastrar Evento"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource White}"
                    Clicked="Button_Clicked"
                    />
            </VerticalStackLayout>
        </Frame>
        
    </VerticalStackLayout>
</ContentPage>